<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="
    	http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd   
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
	
	<context:component-scan base-package="com.somnus.sm" />
	
    <!-- application 上下文 -->
    <bean class="com.somnus.sm.support.ApplicationContextHolder"/>
    
    <!-- 公共配置文件-->
	<import resource="classpath:/spring-env.xml"/>	
	<import resource="classpath:/spring-resource-db.xml" />
	<import resource="classpath:/spring-aspect.xml" />
    <import resource="classpath:/spring-mybatis.xml" />
    
</beans>
